{
  "nodeModulesDir": "auto",
  "look": false,
  "name": "hobby-blog",
  "version": "0.0.1",
  "type": "module",
  "tasks": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "imports": {
    "@sveltejs/kit": "npm:@sveltejs/kit@2.20.7",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@5.0.0",
    "autoprefixer": "npm:autoprefixer@10.4.21",
    "date-fns": "npm:date-fns@4.1.0",
    "gray-matter": "npm:gray-matter@4.0.3",
    "marked": "npm:marked@15.0.11",
    "markdown-it": "npm:markdown-it@14.1.0",
    "postcss": "npm:postcss@8.5.3",
    "svelte": "npm:svelte@5.28.2",
    "svelte-check": "npm:svelte-check@4.1.6",
    "typescript": "npm:typescript@5.8.3",
    "vite": "npm:vite@6.3.3"
  },
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext"
  }
}
